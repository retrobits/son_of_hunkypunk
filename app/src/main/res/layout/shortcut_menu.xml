<menu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shortcut_menu"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <item
        android:id="@+id/change_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/blue_big"
        android:orderInCategory="100"
        android:showAsAction="always"
        android:title="Shortcuts color">
        <menu>
            <item
                android:id="@+id/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/blue_big"
                android:title="Blue"
                android:iconTint="@color/md_theme_light_primary"
                android:showAsAction="always">
            </item>
            <item
                android:id="@+id/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/grey_big"
                android:title="Grey"
                android:iconTint="@color/md_theme_light_outline"
                android:showAsAction="always">
            </item>
            <item
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/green_big"
                android:title="Green"
                android:iconTint="@color/md_theme_light_tertiary"
                android:showAsAction="always">
            </item>
            <item
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/red_big"
                android:title="Red"
                android:iconTint="@color/md_theme_light_error"
                android:showAsAction="always">
            </item>
            <item
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/yellow_big"
                android:title="Yellow"
                android:iconTint="@color/md_theme_light_secondary"
                android:showAsAction="always">
            </item>
        </menu>
    </item>


    <item
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@android:drawable/ic_menu_add"
        android:orderInCategory="100"
        android:showAsAction="always"
        android:title="Add new shortcut"/>

    <item
        android:id="@+id/restore_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@android:drawable/ic_menu_revert"
        android:orderInCategory="100"
        android:showAsAction="always"
        android:title="Restore default shortcuts"/>


    <item
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@android:drawable/ic_menu_info_details"
        android:orderInCategory="100"
        android:showAsAction="always"
        android:title="Shortcuts Help"/>
</menu>
